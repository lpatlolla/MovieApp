<p id="notice"><%= notice %></p>

<h1 align="center">All listed Movies</h1>
<%= link_to 'Home', '/static_pages/home' %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= link_to 'Movie Details', movie %></td>
        <td><%= link_to 'Edit Movie ', edit_movie_path(movie) %></td>
        <td><%= link_to 'Delete', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>
